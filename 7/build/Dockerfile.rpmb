ARG centos=7.9.2009
ARG image=base
FROM aursu/rpmbuild:${centos}-${image}

# install RPM build tools and assets
RUN yum -y install \
        deltarpm \
        jq \
        rpm-build \
        yum-utils \
        epel-rpm-macros \
    && yum clean all && rm -rf /var/cache/yum /var/lib/rpm/__db*

COPY system/etc/yum.repos.d/bintray-custom.repo /etc/yum.repos.d/bintray-custom.repo